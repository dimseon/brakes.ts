{
  "extends": "airbnb-base",
  "rules": {
    "brace-style" : [2, "stroustrup", {"allowSingleLine" : true}],
    "arrow-parens" : [2, "as-needed"],
    "comma-dangle": 0,
    "max-len": 0,
    "prefer-rest-params": 0,
    "no-use-before-define": 0,
    "no-mixed-operators": 0,
    "strict": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "no-plusplus": 0,
    "prefer-spread": 0,
    "prefer-destructuring": 0
  }
}
